# =========================
# Server Configuration
# =========================
PORT=                # Port number the server will run on (e.g., 3000)
NODE_ENV=            # Node environment (e.g., development, production)
LOG_LEVEL=           # Logging level (e.g., info, warn, debug)

# =========================
# Rate Limiting Configuration
# =========================
RATE_LIMIT_WINDOW_MS=    # Rate limit window in milliseconds (e.g., 600000 for 10 mins)
RATE_LIMIT_MAX=          # Max number of requests per IP per window (e.g., 20)

# =========================
# CORS Configuration
# =========================
CORS_ORIGIN=         # Allowed origin for CORS (e.g., http://localhost:3000)

# =========================
# Security Configuration
# =========================
JWT_SECRET=          # Secret key used for signing JWT tokens

# =========================
# PostgreSQL Database Configuration
# =========================
DB_HOST=             # Hostname of the PostgreSQL database (e.g., localhost)
DB_PORT=             # Port number of the PostgreSQL database (e.g., 5432)
DB_USER=             # Username for the PostgreSQL database
DB_PASSWORD=         # Password for the PostgreSQL database
DB_NAME=             # Name of the PostgreSQL database

# Full database connection URL (built using the above values)
DATABASE_URL=        # PostgreSQL connection string (e.g., postgres://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME})
