{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "outDir": "./dist",
        "rootDir": "./src",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "moduleResolution": "nodenext",
        "declaration": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "noEmitOnError": true,
        "useDefineForClassFields": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist/**/*"]
}
